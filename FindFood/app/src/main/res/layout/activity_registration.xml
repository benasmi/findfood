<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mabe.productions.findfood.Registration"
    android:background="#E43F3F">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:id="@+id/registerTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textSize="43dp"
        android:textColor="#eca3a3" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/username_login"
        android:singleLine="true"
        android:background="@drawable/edit_borders"
        android:layout_marginTop="27dp"
        android:capitalize="none"
        android:layout_below="@+id/registerTextView"
        android:textColorHint="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:layout_alignParentBottom="false"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:maxHeight="1dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/mail"
        android:background="@drawable/edit_borders"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:textColorHint="#FFFFFF"
        android:paddingStart="10dp"
        android:layout_below="@+id/username_login"
        android:layout_alignStart="@+id/username_login"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:maxHeight="1dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/password_login"
        android:hint="Password"
        android:singleLine="true"
        android:password="true"
        android:background="@drawable/edit_borders"
        android:layout_below="@+id/mail"
        android:layout_alignStart="@+id/mail"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:maxHeight="1dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/repeat_password"
        android:password="true"
        android:background="@drawable/edit_borders"
        android:hint="Repeat password"
        android:textColorHint="#FFFFFF"
        android:layout_below="@+id/password_login"
        android:singleLine="true"
        android:layout_alignStart="@+id/password_login"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:maxHeight="1dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Register"
        android:id="@+id/register_user"
        android:onClick="register"
        android:background="@drawable/button_borders_red"
        android:layout_marginTop="54dp"
        android:alpha="0.85"
        android:textSize="17dp"
        android:layout_below="@+id/repeat_password"
        android:layout_alignStart="@+id/repeat_password"
        android:textColor="#ffffff" />

</RelativeLayout>
