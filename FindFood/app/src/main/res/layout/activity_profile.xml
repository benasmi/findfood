<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mabe.productions.findfood.ProfileActivity"
    android:background="#ffffff">



    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#DD4337"
        android:theme="@style/AppThemeBar"
        app:popupTheme="@style/AppThemeBar"/>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/profile_toolbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:id="@+id/layout"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:id="@+id/background_picture"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:id="@+id/imageView123"
                    android:background="#50ffffff"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:id="@+id/imageView4"
                    android:background="#ca000000"
                    android:layout_below="@+id/background_picture"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/truck_name"
                    android:editable="false"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:text="Truck name"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/slogan"
                    android:layout_below="@+id/truck_name"
                    android:layout_centerHorizontal="true"
                    android:editable="false"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="Musu kebabai - geriausi kebabai"
                    android:textIsSelectable="false"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/relativeLayout"></RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/imageView3"
                    android:background="#50ffffff"
                    android:layout_above="@+id/imageView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_mail"
                    android:editable="false"
                    android:hint="E-mail"
                    android:background="#00ffffff"
                    android:textStyle="italic"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingStart="10dp"
                    android:textSize="14dp"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number"
                    android:gravity="left|center"
                    android:hint="No phone number"
                    android:background="#00ffffff"
                    android:textStyle="italic"
                    android:editable="false"
                    android:paddingStart="10dp"
                    android:textSize="14dp"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/profile_mail"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:drawableLeft="@drawable/description_icon"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Description"
                    android:id="@+id/desciption_textview"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:id="@+id/imageView6"
                    android:background="#9c8b8b8b"
                    android:layout_below="@+id/desciption_textview"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:gravity="center"
                    android:hint="Description isn't set"
                    android:editable="false"
                    android:layout_below="@+id/imageView6"
                    android:background="#00ffffff"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/menu_icon"
                    android:drawablePadding="6dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Menu"
                    android:id="@+id/textView6"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="2dp" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:id="@+id/imageView14"
                    android:layout_below="@+id/textView6"
                    android:background="#9c8b8b8b"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Owner doesn&apos;t have a menu"
                android:gravity="center_horizontal"
                android:background="#00ffffff"
                android:textStyle="italic"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:id="@+id/imageView17"
                    android:background="#9c8b8b8b"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:drawableLeft="@drawable/label_icon"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Special offers"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/special_offers"
                    android:gravity="center"
                    android:hint="No special offers at the moment"
                    android:editable="false"
                    android:layout_below="@+id/imageView17"
                    android:background="#00ffffff"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/schedule_icon"
                    android:drawablePadding="6dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Schedule"
                    android:id="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:id="@+id/imageView19"
                    android:background="#9c8b8b8b"
                    android:layout_below="@+id/textView8"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Pirmadienis"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"

                    android:id="@+id/Antradienis"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tuesday"
                        android:id="@+id/textView9"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView20"
                        android:background="#9c8b8b8b"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tuesday"
                        android:layout_below="@+id/textView9"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:editable="false"
                        android:textSize="13dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView8"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Pirmadienis"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/monday"
                        android:layout_below="@+id/textView10"
                        android:layout_centerHorizontal="true"
                        android:editable="false"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView22"
                        android:background="#9c8b8b8b"
                        android:layout_alignBottom="@+id/monday"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Monday"
                        android:id="@+id/textView10"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Antradienis"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Treciadienis"
                    android:layout_marginBottom="5dp"
                    android:background="#ffffff">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/wednesday"
                        android:layout_below="@+id/textView11"
                        android:editable="false"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView24"
                        android:background="#9c8b8b8b"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Wednesday"
                        android:id="@+id/textView11"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Treciadienis"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Ketvirtadienis"
                    android:layout_marginBottom="5dp"
                    android:background="#ffffff">

                    <EditText
                        android:layout_width="fill_parent"
                        android:editable="false"
                        android:layout_height="wrap_content"
                        android:id="@+id/thursday"
                        android:layout_below="@+id/textView12"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView26"
                        android:background="#9c8b8b8b"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Thursday"
                        android:id="@+id/textView12"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Ketvirtadienis"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Penktadienis"
                    android:layout_marginBottom="5dp"
                    android:background="#ffffff">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/friday"
                        android:layout_below="@+id/textView13"
                        android:editable="false"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView28"
                        android:background="#9c8b8b8b"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Friday"
                        android:id="@+id/textView13"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Penktadienis"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Sestadienis"
                    android:layout_marginBottom="5dp"
                    android:background="#ffffff">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:id="@+id/saturday"
                        android:layout_below="@+id/textView14"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView30"
                        android:background="#9c8b8b8b"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Saturday"
                        android:id="@+id/textView14"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Sestadienis"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/Sekmadienis"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sunday"
                        android:editable="false"
                        android:layout_below="@+id/textView15"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:hint="Not given"
                        android:gravity="center"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView32"
                        android:background="#9c8b8b8b"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sunday"
                        android:id="@+id/textView15"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp" />

                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:id="@+id/imageView15"
                android:background="#ca000000"
                android:layout_below="@+id/background_picture"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_weight="1" />

        </LinearLayout>

</ScrollView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/find_truck"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/find_truck"
        android:textSize="18dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>