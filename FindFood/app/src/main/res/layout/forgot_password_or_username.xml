<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.benas.findfood.ForgotPasswordOrUsername"
    android:background="#E43F3F">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Information"
        android:id="@+id/password_recovery_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textSize="35dp"
        android:textColor="#eca3a3" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/profile_mail"
        android:background="@drawable/edit_borders"
        android:hint="Enter your account e-mail"
        android:textColorHint="#ffffff"
        android:paddingStart="10dp"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/recovery_text"
        android:layout_alignStart="@+id/password_recovery" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Send information"
        android:id="@+id/password_recovery"
        android:background="@drawable/button_borders_red"
        android:layout_marginTop="30dp"
        android:alpha="0.85"
        android:onClick="recoverPass"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/profile_mail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recovery"
        android:id="@+id/recovery_text"
        android:textSize="35dp"
        android:textColor="#eca3a3"
        android:layout_below="@+id/password_recovery_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
